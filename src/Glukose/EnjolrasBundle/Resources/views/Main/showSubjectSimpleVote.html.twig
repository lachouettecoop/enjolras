{% extends "GlukoseEnjolrasBundle::layout.html.twig" %}


{% block content %}
<div class="container">

    <div class="row">
        <div class="breadcrumb-line clearfix">
            <ul class="breadcrumb">
                <li><a href="" accesskey="h" data-original-title="" title=""><span class="glyphicon glyphicon-home"></span></a></li>
                <li><a href="" accesskey="h" data-original-title="" title="">Accueil</a></li>
                <li><a href="" accesskey="h" data-original-title="" title="">Chouette Coop</a></li>
                <li><a href="" accesskey="h" data-original-title="" title="">Décisions</a></li>
                <li><a href="" accesskey="h" data-original-title="" title="">{{subject.title}}</a></li>

            </ul>
        </div>
    </div>

    <div class="col-md-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>            
            {{ flashMessage }}            
        </div>
        {% endfor %}
    </div>

    <div class="row bottom-buffer">
        <div class="row">
            <div class="col-md-8">
                <div class="card noMargin">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>Sujet : {{subject.title}}</h1>
                        </div>
                        <div class="col-md-12 top-buffer">
                            <p>{{subject.description | raw}}</p> 
                            <hr>
                            {% if not subject.termine %}
                            <p> {% set difference = date(subject.dateFin).diff(date("now")) %}                
                                <i class="glyphicon glyphicon-calendar"></i>
                                Il reste {{ difference.days }} jours avant la fin du vote ({{subject.dateFin | date("d-m-Y") }})</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="headMainTopic noMargin pending-color">
                    {% if subject.termine %}
                    Vote terminé
                    {% else %}
                    Décision en cours
                    {% endif %}
                </div>
                <div class="card noMargin">
                    <div class="row">
                        <div class="col-md-12">

                            {% if subject.termine %}
                            <div class="center">
                                <h3>Résultats : </h3>
                                <br />

                                <canvas id="chartResults" class="left-margin"></canvas>

                                <br />
                                <br />
                                {% for result in tabResults %}
                                {{result[0]}} : {{result[1][1]}} 
                                {% endfor %}

                                <br /><br />
                                <a href="{{path('glukose_enjolras_publication_resultats', {'idSubject':subject.id})}}" class="btn btn-default" >Voir la liste complète des votes</a>
                            </div>

                            {% else %}
                            <div>
                                {% if app.user %}
                                {% if vote == null %}       
                                <div class="center">
                                    <strong>Vous n'avez pas encore voté pour cette décision : </strong>
                                    <br />
                                    <br />
                                    <a href="{{path('glukose_enjolras_voteCondorcet', {'idSubject':subject.id})}}" class="btn btn-default" >Voter</a> 
                                </div>
                                {% else %}
                                <div>
                                    <strong>Votre vote :</strong>
                                    <br />
                                    <br />
                                    {{ vote }}
                                </div>
                                <br />
                                <div class="center">
                                    <a href="{{path('glukose_enjolras_voteCondorcet', {'idSubject':subject.id})}}" class="btn btn-default" >Changer mon vote</a>
                                </div>
                                {% endif %}
                                {% endif %}

                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row bottom-buffer">
        <div class="headMainTopic noMargin">
            Propositions
        </div>
        <div class="card noMargin">
            <div id="content">
                <p>Ceci est un vote simple ou vous pourrez répondre par oui, non, ne se prononce pas</p>
            </div>
        </div>
    </div>

</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('bundles/glukoseenjolras/js/chart.min.js') }}"></script>
{% endblock %}

{% block jquery %}


{% if subject.termine %}
<script type="text/javascript">
    $( document ).ready(function() {
        var ctx = $("#chartResults").get(0).getContext("2d");
        //var myNewChart = new Chart(ctx);
        Chart.defaults.global.responsive = true;

        {% autoescape false  %}
        Chart.defaults.global.tooltipTemplate = '<%if (label){ %><%=label%> = <%}%><%= value %>';
         {% endautoescape %}
         var tabColor = ['#00c300', '#e74c3c', '#34495e'];
          var tabColorHigh = ['#00a300', '#a73529', '#2c3e50'];

          var data = [
              {% for result in tabResults %}

              {
                  value: {{result[1][1]}},
              highlight: tabColorHigh[{{loop.index0}}],
              color: tabColor[{{loop.index0}}],
                  label: "{{result[0]}}"
         },


             {% endfor%}

             ];
              var myPieChart = new Chart(ctx).Pie(data, {//Boolean - Whether we animate the rotation of the Doughnut
                  animateRotate : true,


              });

             });
         {% endif %}
</script>  
{% endblock %}
